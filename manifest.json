{
    "manifest_version": 3,
    "name": "Weather and Task Extension",
    "version": "1.0",
    "description": "Displays weather information for Mumbai and allows task management.",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "geolocation"
    ],
    "host_permissions": [
        "https://api.openweathermap.org/"
    ]
}